<!DOCTYPE html>
<html>
<head>
	<title>トップページ</title>
	<link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
<div class="l-wrapper">
	<%- include('header') %>
	<div class="l-content">
		<h1>トップページ</h1>
		<div class="form">
			<form action="/message/add" name="frm" method="post">
				<input type="text" name="message" value="" />
				<input type="hidden" name="user_id" value="<%= user.id %>">
				<p class="btn"><a href="#" onclick="document.frm.submit();return false;">送信</a></p>
			</form>
		</div>
		<div class="messages">
			<ul>
				<% for(var i in messages){ %>
					<li>
						<dl>
							<dt><%= messages[i].attributes.message %></dt>
							<dd class="user"><%= messages[i].relations.user.attributes.name %></dd>
							<dd class="date"><%= messages[i].attributes.created_at %></dd>
						</dl>

					</li>
				<% } %>%>
			</ul>
		</div>
	</div>
</div>
</body>
</html>
